# Liquid Audio MCP Server Dockerfile
# Containerized deployment for cross-platform compatibility

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive
ENV LIQUID_AUDIO_MODEL_PATH=/app/models
ENV LIQUID_AUDIO_CACHE_DIR=/app/cache
ENV LIQUID_AUDIO_LOG_LEVEL=INFO

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libsndfile1 \
    libsndfile1-dev \
    libasound2-dev \
    libportaudio2 \
    libportaudiocpp0 \
    portaudio19-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-mcp.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-mcp.txt

# Copy application files
COPY mcp-server.py .
COPY mcp-tools.py .
COPY mcp-config.json .
COPY setup-mcp.py .

# Create necessary directories
RUN mkdir -p models cache temp logs input output

# Create non-root user for security
RUN useradd -m -u 1000 mcpuser && \
    chown -R mcpuser:mcpuser /app
USER mcpuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import mcp.server, liquid_audio; print('OK')" || exit 1

# Expose port (if needed for HTTP interface)
EXPOSE 8080

# Default command
CMD ["python", "mcp-server.py"]